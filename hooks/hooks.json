{
  "description": "Injects methodology instructions at critical moments and checks for updates",
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "cat ${CLAUDE_PLUGIN_ROOT}/claude-hook.md"
      },
      {
        "type": "command",
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-config-updates.sh"
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "cat ${CLAUDE_PLUGIN_ROOT}/claude-hook.md"
      }
    ]
  }
}
